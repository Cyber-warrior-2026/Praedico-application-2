    {
      "name": "4. STUDENT REGISTRATION & APPROVAL",
      "item": [
        {
          "name": "4.1 Register Student WITH Organization",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Store student email for later use",
                  "pm.collectionVariables.set('studentEmail', 'sambhav.student@gmail.com');"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{yourEmail}}\",\n  \"name\": \"Sambhav Student\",\n  \"organizationId\": \"{{organizationId}}\",\n  \"departmentId\": \"{{departmentId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "register"]
            },
            "description": "⚠️ Use YOUR email here to receive verification + approval notifications will go to org admin & coordinator!"
          },
          "response": []
        },
        {
          "name": "4.2 Verify Student Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"PASTE_STUDENT_TOKEN_FROM_EMAIL\",\n  \"password\": \"Student123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "verify"]
            },
            "description": "⚠️ Check email for student verification token!"
          },
          "response": []
        },
        {
          "name": "4.3 Student Login (SHOULD FAIL - Pending)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{yourEmail}}\",\n  \"password\": \"Student123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "login"]
            },
            "description": "✅ This should FAIL with 'pending approval' message!"
          },
          "response": []
        },
        {
          "name": "4.4 Get Pending Students (Coordinator)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.students && jsonData.students.length > 0) {",
                  "        pm.collectionVariables.set('studentId', jsonData.students[0]._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "accessToken={{coordinatorToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/coordinator/students/pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "coordinator", "students", "pending"]
            },
            "description": "Shows pending students in coordinator's department only"
          },
          "response": []
        },
        {
          "name": "4.5 Approve Student (Coordinator)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Cookie",
                "value": "accessToken={{coordinatorToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/coordinator/students/{{studentId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "coordinator", "students", "{{studentId}}", "approve"]
            },
            "description": "✅ After this, student will receive approval email!"
          },
          "response": []
        },
        {
          "name": "4.6 Student Login (NOW SUCCESS!)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
